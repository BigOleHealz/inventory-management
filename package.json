{
  "name": "inventory-management",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start-react": "npm --prefix frontend start",
    "start-backend": "python backend/app.py",
    "start-electron": "electron .",
    "start": "npm --prefix frontend start",
    "build": "npm --prefix frontend run build",
    "dev": "concurrently \"npm run start-react\" \"npm run start-backend\" \"wait-on http://localhost:3000 && npm run start-electron\""
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^32.0.1",
    "wait-on": "^8.0.0"
  }
}
